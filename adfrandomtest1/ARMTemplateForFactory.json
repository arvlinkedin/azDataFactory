			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "GetMetadataDataset",
								"type": "DatasetReference"
							},
							"name": "source1"
						},
						{
							"dataset": {
